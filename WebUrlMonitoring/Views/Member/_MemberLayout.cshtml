<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebUrlMonitoring</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Member" asp-route-returnUrl="/Home/Index" asp-action="LogOut">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">

        <div class="row">
            <div class="col-md-10">
                @RenderBody()
            </div>

            <div class="col-md-2">
                <h3>Menü</h3>
                <div class="d-grid gap-2">
                    <a class="btn btn-danger" asp-controller="Member" asp-action="ScheduleSetting">Schedule Ayarları</a>
                    <a class="btn btn-primary" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştrime </a>
                    <a class="btn btn-primary" asp-action="UserEdit" asp-controller="Member">Bilgi Güncelleme </a>
                    <a class="btn btn-primary" asp-action="LogOut" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap </a>
                </div>
            </div>


        </div>

    </div>
</body>
</html>
