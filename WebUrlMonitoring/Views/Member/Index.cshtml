@model Entities.Abstract.VM_User

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h3 class=" text-center">Kullanıcı bilgileri </h3>
<hr />
@if (TempData["Info"] != null)
{
    <div class="alert alert-info"> @TempData["Info"]</div>
}
<div class="row">

    <div class="col col-md-3">

        @*<img src="~/Images/UserImage/avatardefault_92824.png" style=" width:125px;" />*@

        <img src="@Model.Picture" style=" width:125px;" />
    </div>

    <div class="col col-md-9">
        <table class="table table-bordered table-striped">

            <tr>
                <th> Kullanıcı İsmi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th> E-posta </th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th> Telefon No </th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th> Şehir </th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th> Doğum Tarihi </th>
                <td>@Model.BirthDate?.ToShortDateString() </td>
            </tr>


        </table>


    </div>

</div>


