@model IEnumerable<WebUrlMonitoring.Models.ScheduleSettingViewModel>

@{
    ViewData["Title"] = "ScheduleSetting";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h3 class=" text-center">Schedule Ayarları </h3>
<hr />
@if (TempData["Info"] != null)
{
    <div class="alert alert-info"> @TempData["Info"]</div>
}

<p>
    <a class="btn btn-info" asp-action="CreateScheduleSetting">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckTime)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
          
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Interval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastCheckTime)
                </td>
                <td>
                    <form asp-action="DeleteScheduleSetting" asp-route-Id="@item.Id" method="post" onclick="return confirm(" Schedule Silinecek">

                        <button class="btn btn-success" type="submit">Sil</button>

                    </form>


                </td>
                <td> <a asp-action="UpdateScheduleSetting" asp-route-Id="@item.Id" class="btn btn-info">Güncelle </a> </td>
            </tr>
        }
    </tbody>
</table>
